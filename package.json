{
  "name": "component-catalog-front",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:proxy": "ng serve --proxy-config proxy.conf.json",
    "build": "npm run generate-api-client && ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false --code-coverage --reporters=junit,coverage,progress",
    "generate-api-client": "npm run generate-api-client:clean && npm run generate-api-client:catalog && npm run generate-api-client:provisioner && npm run generate-api-client:projects-info-service",
    "generate-api-client:clean": "rm -rf src/app/openapi",
    "generate-api-client:catalog": "openapi-generator-cli generate --generator-key component-catalog-client",
    "generate-api-client:provisioner": "openapi-generator-cli generate --generator-key component-provisioner-client",
    "generate-api-client:projects-info-service": "openapi-generator-cli generate --generator-key projects-info-service-client",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.14",
    "@angular/common": "^19.2.14",
    "@angular/compiler": "^19.2.14",
    "@angular/core": "^19.2.14",
    "@angular/forms": "^19.2.14",
    "@angular/material": "19.2.18",
    "@angular/platform-browser": "^19.2.14",
    "@angular/platform-browser-dynamic": "^19.2.14",
    "@angular/router": "^19.2.14",
    "@openapitools/openapi-generator-cli": "^2.16.3",
    "@opendevstack/ngx-appshell": "19.0.10",
    "@opendevstack/ods-selector-widget": "0.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.14",
    "@angular/cli": "^19.2.14",
    "@angular/compiler-cli": "^19.2.14",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "19.2.1",
    "eslint": "^9.22.0",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-junit-reporter": "2.0.1",
    "typescript": "~5.5.2",
    "typescript-eslint": "8.26.0"
  }
}
